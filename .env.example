# ========================================
# RSS News Reader â€“ Example Environment
# Copy to .env and replace placeholder values
# ========================================

# ========================================
# SHARED CONFIGURATION
# ========================================
# Inoreader OAuth (server-side)
INOREADER_CLIENT_ID=
INOREADER_CLIENT_SECRET=
INOREADER_REDIRECT_URI=http://localhost:8080/auth/callback

# Client-side OAuth (embedded at build time)
NEXT_PUBLIC_INOREADER_CLIENT_ID=
NEXT_PUBLIC_INOREADER_REDIRECT_URI=http://localhost:8080/auth/callback

# Claude API (server-side)
ANTHROPIC_API_KEY=
CLAUDE_SUMMARIZATION_MODEL=claude-sonnet-4-20250514

# AI Summarization Configuration
SUMMARY_WORD_COUNT=150-175
SUMMARY_FOCUS=key facts, main arguments, and important conclusions
SUMMARY_STYLE=objective

# Token Encryption Key (server-side)
# Generate with: openssl rand -base64 32
TOKEN_ENCRYPTION_KEY=

# Server Configuration (server-side)
SERVER_PORT=8080
RSS_READER_TOKENS_PATH=~/.rss-reader/tokens.json

# Test Credentials for Automated OAuth Setup (optional)
TEST_INOREADER_EMAIL=
TEST_INOREADER_PASSWORD=

# Sync Configuration
SYNC_MAX_ARTICLES=500
ARTICLES_RETENTION_LIMIT=1000

# ========================================
# APPLICATION CONFIGURATION (Development)
# ========================================
# Next.js dev server
PORT=3000
NODE_ENV=development
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Development-specific overrides (compat)
DEV_PORT=3000
DEV_NODE_ENV=development
DEV_NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Database Configuration (Supabase)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Optional legacy compatibility (not required)
SUPABASE_URL=

# Optional: Code review/tooling
OPENAI_API_KEY=

# Optional override for server OAuth scripts
INOREADER_OAUTH_REDIRECT_URI=

# ========================================
# PM2 / Monitoring / Cron (Development)
# These are used by PM2-managed apps in ecosystem.config.js
# Not required for `npm run dev`
# ========================================
# Enable scheduled sync
ENABLE_AUTO_SYNC=true
SYNC_CRON_SCHEDULE=0 2,6,10,14,18,22 * * *
SYNC_LOG_PATH=./logs/sync-cron.jsonl

# Sync server internals
SYNC_INTERVAL_MINUTES=5
SYNC_MIN_CHANGES=5
SYNC_BATCH_SIZE=100
SYNC_MAX_RETRIES=3
SYNC_RETRY_BACKOFF_MINUTES=10

# Service health monitor
HEALTH_URL=http://localhost:3000/reader/api/health/app
DISCORD_WEBHOOK_URL=
CHECK_INTERVAL=120
MAX_RESTARTS_PER_HOUR=3
RESTART_COOLDOWN=300
LOG_FILE=./logs/monitor-services.jsonl
ERROR_LOG=./logs/monitor-error.log

# Uptime Kuma push intervals (seconds)
SYNC_PUSH_INTERVAL=300
DB_PUSH_INTERVAL=600
FETCH_PUSH_INTERVAL=1800
API_PUSH_INTERVAL=3600

# Optional: Next.js build output dir override
NEXT_BUILD_DIR=.next

