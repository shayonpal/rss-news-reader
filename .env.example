# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Inoreader API Configuration
NEXT_PUBLIC_INOREADER_CLIENT_ID=your_client_id_here
INOREADER_CLIENT_SECRET=your_client_secret_here
NEXT_PUBLIC_INOREADER_REDIRECT_URI=http://localhost:3000/api/auth/callback/inoreader

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_SUMMARIZATION_MODEL=claude-sonnet-4-20250514

# Environment
NODE_ENV=development

# Sync Configuration
SYNC_MAX_ARTICLES=100              # Number of articles to fetch per sync (default: 100)
ARTICLES_RETENTION_LIMIT=1000      # Number of articles to keep during auto-cleanup (default: 1000)