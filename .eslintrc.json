{
  "extends": ["next/core-web-vitals"],
  "rules": {
    "prefer-const": "error",
    "no-var": "error",
    "react/no-unescaped-entities": "off"
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": [
        "src/__tests__/**/*.ts",
        "src/__tests__/**/*.tsx",
        "**/*.test.ts",
        "**/*.test.tsx"
      ],
      "rules": {
        "@next/next/no-assign-module-variable": "off",
        "@next/next/no-img-element": "off"
      }
    }
  ]
}
